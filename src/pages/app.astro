---
// Component imports
import CardRecommandation from "@component/CardRecommandation.astro"
import CardSmall from "@component/CardSmall.astro"
import DominentImageColor from "@component/DominentColor"
import Sidebar from "@component/Sidebar.astro"
import { Layout } from "@globals"
---

<Layout title="Home">
	<main class="h-[100dvh] w-full bg-zinc-900 flex text-zinc-50">
		<Sidebar />
		<section
			class="w-[80%] overflow-y-auto h-full bg-center relative"
			style="background-image: url('/de.png');"
		>
			<section
				id="bgcover"
				class="backdrop-blur-lg bg-zinc-900/90 bg-gradient-to-tr"
			>
				<header
					class="h-[10%] flex items-center justify-between px-[5%] pt-[1%]"
				>
					<input
						type="search"
						name="search"
						placeholder="Search..."
						class="h-[40px] w-5/12 bg-zinc-600 px-5"
						id=""
					/>
					<nav class="flex gap-4 items-center">
						<svg
							class="h-[20px] w-[20px] fill-zinc-100"
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
						>
							<g>
								<path fill="none" d="M0 0h24v24H0z"></path>
								<path
									d="M20 18.667l.4.533a.5.5 0 0 1-.4.8H4a.5.5 0 0 1-.4-.8l.4-.533V10a8 8 0 1 1 16 0v8.667zM9.5 21h5a2.5 2.5 0 1 1-5 0z"
								></path>
							</g>
						</svg>
						<p class="h-[50px] w-[50px] bg-zinc-200 rounded-full"></p>
					</nav>
				</header>
				<aside class="h-[90%] flex">
					<aside class="w-6/12 pl-[5%] pt-[2%]">
						<h3 class="text-zinc-200 font-medium text-3xl">Featured</h3>
						<h1 class="text-5xl font-bold text-white">Best of the day</h1>
						<nav class="mt-4 text-zinc-300">
							Lorem ipsum dolor, sit amet consectetur adipisicing elit. Rem
							officia minima eos laborum, at tenetur libero ad soluta placeat,
							nisi possimus iste dolores .
						</nav>
						<div class="mt-6 space-y-4">
							<CardSmall />
							<CardSmall />
							<CardSmall />
							<CardSmall />
							<CardSmall />
						</div>
					</aside>
					<aside class="w-6/12 relative bg-cover bg-center">
						<DominentImageColor client:visible />
					</aside>
				</aside>
				<aside class="px-[5%] pt-[4%]">
					<h3 class="text-zinc-200 font-medium text-3xl">Recommended albums</h3>

					<div class="mt-6 flex gap-4 items-center">
						<CardRecommandation />
						<CardRecommandation />
						<CardRecommandation />
						<CardRecommandation />
					</div>
				</aside>
			</section>
		</section>
	</main>
</Layout>
